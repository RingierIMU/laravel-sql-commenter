{
    "name": "spatie/laravel-sql-commenter",
    "description": "Add comments to SQL queries made by Laravel",
    "keywords": [
        "spatie",
        "laravel",
        "sqlcommenter",
        "sql-commenter"
    ],
    "homepage": "https://github.com/spatie/laravel-sql-commenter",
    "license": "MIT",
    "authors": [
        {
            "name": "Rias Van der Veken",
            "email": "rias@spatie.be",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8",
        "spatie/backtrace": "^1",
        "spatie/invade": "^1",
        "spatie/laravel-package-tools": "^1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "nunomaduro/collision": "^5",
        "nunomaduro/larastan": "^1 || ^2",
        "orchestra/testbench": "^6",
        "pestphp/pest-plugin-laravel": "^1",
        "phpstan/extension-installer": "^1",
        "phpstan/phpstan-deprecation-rules": "^1",
        "phpstan/phpstan-phpunit": "^1",
        "phpunit/phpunit": "^9",
        "spatie/laravel-ray": "^1"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\SqlCommenter\\": "src",
            "Spatie\\SqlCommenter\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\SqlCommenter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "8.0.18"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\SqlCommenter\\SqlCommenterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
